@import 'nib'

$numCols = 7
$numRows = 6
$cellSize = 75


vendor(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    -ms-{prop} args
    -o-{prop} args
    {prop} args

box-shadow()
	vendor('box-shadow', arguments)
   
transition()
    vendor('transition', arguments)

border-radius(n)
  vendor('border-radius', arguments)
	

body
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  
a
	color #00B7FF

li
	color blue

h2
	color purple

#page
	width 95%
	margin 0 auto

#content
	width 100%
	min-width 1060px

.panel
	float left

#gamePanel
	width 65%
	margin-right 5%

#gameGrid
	position relative
	width ($cellSize*$numCols)px
	height ($cellSize*$numRows)px
	margin 110px 0 1em 0
	border-radius(10px)
	border 3px solid #f7d805

	.board
		position absolute
		top 0
		left 0
		z-index -30
		width 100%
		height 100%
		background-color #f7e305
		opacity 0.7
		
	.column
		position relative
		float left
		width ($cellSize)px
		height 100%
		text-align center

	.slot
		width $cellSize px
		height $cellSize px
		background-color white
		border-radius(50px)
		box-shadow(inset 1px 2px 5px #000)

	.dot
		width $cellSize px
		height $cellSize px
		position absolute
		top 0
		left 0
		margin-top -100px
		// http://matthewlein.com/ceaser/ <-- easing tool
		transition(margin, .35s, cubic-bezier(0.950,  0.050, 0.795, 0.035))
		margin-top -116px
		transition(margin, 1s, ease-in-out)

	.dot.spot-0
		margin-top ($cellSize*5) px
	.dot.spot-1
		margin-top ($cellSize*4) px
	.dot.spot-2
		margin-top ($cellSize*3) px
	.dot.spot-3
		margin-top ($cellSize*2) px
	.dot.spot-4
		margin-top $cellSize px
	.dot.spot-5
		margin-top 0

		


.playerOne
	color red

.playerTwo
	color green


#chatPanel
	width 30%

#chatInput
	margin 0 0 20px
	border 1px solid #ccc
	width 100%
	box-shadow 3px 3px 8px #ddd inset, 3px 3px 8px #888

#chatLog
	margin 0 0 20px
	padding 25px
	height 200px
	border 1px solid #ccc
	box-shadow 3px 3px 8px #888
	overflow auto
	p
		margin 0 0 5px

@import 'layout'