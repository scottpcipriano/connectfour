@import 'nib'
@import 'layout'

$num-cols = 7

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n


vendor(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    -ms-{prop} args
    -o-{prop} args
    {prop} args

transition()
    vendor('transition', arguments)
	

body
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  
a
	color #00B7FF

li
	color blue

h2
	color purple

#page
	width 95%
	margin 0 auto

#content
	width 100%
	min-width 1060px

.panel
	float left

#gamePanel
	width 65%
	margin-right 5%

#gameGrid
	position relative
	width 706px
	height 606px
	margin 0 0 1em 0
	padding 100px 0 0 0

	.board
		position absolute
		top 100px
		left 0
		z-index 30
		width 700px
		height 600px
		border-radius(10px)
		border 3px solid #f7d805
		background-color #f7e305
		opacity 0.7
		
	.column
		position relative
		float left
		width 100px
		height 100%
		text-align center
	.dot
		width 100px
		height 100px
		position absolute
		top 0
		left 0
		margin-top -100px
		// http://matthewlein.com/ceaser/ <-- easing tool
		transition(margin, .35s, cubic-bezier(0.950, 0.050, 0.795, 0.035))
	.dot.spot-0
		margin-top 500px
	.dot.spot-1
		margin-top 400px
	.dot.spot-2
		margin-top 300px
	.dot.spot-3
		margin-top 200px
	.dot.spot-4
		margin-top 
	.dot.spot-5
		margin-top 0

		


.playerOne
	color red

.playerTwo
	color green


#chatPanel
	width 30%

#chatInput
	margin 0 0 20px
	border 1px solid #ccc
	width 100%
	box-shadow 3px 3px 8px #ddd inset, 3px 3px 8px #888

#chatLog
	margin 0 0 20px
	padding 25px
	height 200px
	border 1px solid #ccc
	box-shadow 3px 3px 8px #888
	overflow auto
	p
		margin 0 0 5px
