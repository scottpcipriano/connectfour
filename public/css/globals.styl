
$numCols = 7
$numRows = 6
$cellSize = 75
$cellPadding = 5

vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

box-shadow()
	vendor('box-shadow', arguments)

transition()
	vendor('transition', arguments)

border-radius(n)
	vendor('border-radius', arguments)

$gameGridCreator($cellSize)
	#gameGrid
		position relative
		width $cellSize*$numCols px
		height $cellSize*$numRows px
		//margin-top $cellSize + ($cellPadding*2) px
		margin-bottom 1em
		border-radius(10px)
		//border 3px solid #f7d805

		.controls
			width $cellSize*$numCols px
			height $cellSize px
			overflow hidden
			margin-bottom ($cellPadding*2) px
			a
				display block
				float left
				width $cellSize px
				height $cellSize px
				img
					width 100%
					height 100%

		.board
			position absolute
			top ($cellSize + ($cellPadding*2) - 6)px
			left -6px
			z-index 30
			//width 100%
			//height 100%
			//background-color #f7e305
			opacity 0.9
			img
				border-radius(10px)
				border 3px solid #f7d805
				//opacity 0.9

		.column
			position relative
			float left
			width $cellSize px
			height $cellSize*$numRows px
			text-align center

		.row
			float left
			width $cellSize - $cellPadding*2 px
			height $cellSize - $cellPadding*2 px
			background-color white
			border-radius(50px)
			box-shadow(inset 1px 2px 5px #000)
			margin $cellPadding px

		.dot
			width $cellSize px
			height $cellSize px
			position absolute
			top 0
			left 0
			margin-top -($cellSize + ($cellPadding*2)) px
			// http://matthewlein.com/ceaser/ <-- easing tool
			transition(margin, .35s, cubic-bezier(0.950,  0.050, 0.795, 0.035))
			//transition(margin, 1s, ease-in-out)

		.dot.row-0
			margin-top $cellSize*5 - 1 px
		.dot.row-1
			margin-top $cellSize*4 - 1 px
		.dot.row-2
			margin-top $cellSize*3 - 1 px
		.dot.row-3
			margin-top $cellSize*2 - 1 px
		.dot.row-4
			margin-top $cellSize - 1 px
		.dot.row-5
			margin-top -1px