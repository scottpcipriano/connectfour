$cellSize2 = 50
$cellSize3 = 38

@media only screen and (min-width: 901px) and (max-width: 1200px)
	// html,
	// body
	// 	background none red !important
	#gamePanel
		margin-right 5%
	// #content
	// 	height 600px




@media only screen and (min-width: 481px) and (max-width: 900px)
	// html,
	// body
	// 	background none black !important
	header
		h1
			background-size 355px auto
			a
				width 355px
				height 64px
		nav
			margin 0
			ul
				padding 0
			li
				margin 0 0 1px
				float none
	.gameStats
		float none
		clear left
		margin 10px 0 0 15px
		padding 10px 0 0
		color black

	.game
		background-color #e0e0e0
	.game #page
		background url('../images/boy.png') no-repeat right -10px transparent
	#gamePanel
		margin-right 10%



	#gameGrid
		width $cellSize2*$numCols px
		height $cellSize2*$numRows px
		margin-top $cellSize2 + ($cellPadding*2) px
		.board
			img
				width 100%
				background-color white
				border-radius(7px)
				// border 3px solid #f7d805

		.column
			width $cellSize2 px
			height $cellSize2*$numRows px

		.slot
			width $cellSize2 - $cellPadding*2 px
			height $cellSize2 - $cellPadding*2 px
			// margin $cellPadding px

		.dot
			width $cellSize2 px
			height $cellSize2 px
			margin-top -($cellSize2 + ($cellPadding*2)) px

		.dot.spot-0
			margin-top $cellSize2*5 px
		.dot.spot-1
			margin-top $cellSize2*4 px
		.dot.spot-2
			margin-top $cellSize2*3 px
		.dot.spot-3
			margin-top $cellSize2*2 px
		.dot.spot-4
			margin-top $cellSize2 px
		// .dot.spot-5
		// 	margin-top 0




@media only screen and (min-width: 0px) and (max-width: 480px)
	// html,
	// body
	// 	background none white !important

	header
		h1
			background-size 250px auto
			a
				width 250px
				height 60px
		nav
			float left
			margin 0
			ul
				padding 0
	.gamesList
		width 100%
		li
			.actions
				display block
				float none
				padding 10px 0
				a
					padding 10px
					margin 10px
					background-color #83cde2

	.gameStats
		float none
		clear left
		margin 10px 0 0 15px
		padding 10px 0 0
		font-weight 600

	.game
		background-color #e0e0e0
	.game #page
		background url('../images/boy.png') no-repeat right -10px transparent
	#gamePanel
		margin 10% 5% 0 0

	#chatPanel
		margin 2% 0 0 -5%
		width 100%

	#gameGrid
		width $cellSize3*$numCols px
		height $cellSize3*$numRows px
		margin-top $cellSize3 + ($cellPadding*2) px
		.board
			img
				width 100%
				background-color white
				border-radius(7px)
				// border 3px solid #f7d805

		.column
			width $cellSize3 px
			height $cellSize3*$numRows px

		.slot
			width $cellSize3 - $cellPadding*2 px
			height $cellSize3 - $cellPadding*2 px
			// margin $cellPadding px

		.dot
			width $cellSize3 px
			height $cellSize3 px
			margin-top -($cellSize3 + ($cellPadding*2)) px

		.dot.spot-0
			margin-top $cellSize3*5 px
		.dot.spot-1
			margin-top $cellSize3*4 px
		.dot.spot-2
			margin-top $cellSize3*3 px
		.dot.spot-3
			margin-top $cellSize3*2 px
		.dot.spot-4
			margin-top $cellSize3 px
		// .dot.spot-5
		// 	margin-top 0