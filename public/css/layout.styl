html
	background-color #4e95c7
body
	margin 0
	color white
	background-color #4e95c7
	font 15px/1.2em 'Source Sans Pro', sans-serif

a,
a:hover,
a:visited,
a:focus
	color white

#page
	width auto

header
	overflow hidden
	h1
		float left
		margin 15px 0 0 15px
		background url('../images/logo.png') no-repeat 0 0 transparent
		a
			display block
			width 500px
			height 91px
	nav
		float right
		margin 0 50px 0 0
		font-weight 600
	ul
		list-style none
		margin 0
		overflow hidden
	li
		float left
		margin 0 0 0 1px
		a
			display block
			line-height 30px
			padding 0 20px
			background-color #83cde2
			text-decoration none
			transition(all, .2s, ease)
		a:hover
			background-color #83cde2 * .9
			padding-top 5px

#content
	clear both
	overflow hidden
	padding 25px
	width auto

.game
	background-color #e0e0e0
	header
		background-color #4e95c7
	#page
		background-image url('../images/girl.png'), url('../images/bubbles.png')
		background-repeat no-repeat, no-repeat;
		background-position 0 350px, 175px 475px
		background-color #4e95c7, transparent
	#content
		min-height 789px
		background url('../images/boy.png') no-repeat right bottom transparent
		border-bottom 5px solid white

.playerOne
	font-weight 600
	color #e1d100

.playerTwo
	font-weight 600
	color #4dff62

#chatPanel
	float left
	// position absolute
	// right 290px
	// top 20px
	width 30%

#chatPanel * { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }

#chatInput
	font-size 15px
	margin 0 0 8px
	padding 4px
	border 5px solid white
	width 100%
	color white
	background-color #4e95c7 * .8
	box-shadow 3px 3px 8px (#83cde2 * .5)

#chatLog
	margin 0 0 20px
	padding 4px
	width 100%
	height 150px
	background-color #4e95c7 * .8
	border 5px solid white
	box-shadow 3px 3px 8px (#83cde2 * .5)
	overflow auto
	p
		margin 0 0 5px

#gamePanel
	float right
	margin 58px 255px 0 0
	width auto


.eggz
	height 100%
	body
		height 100%
		background url('../images/hipster.png') no-repeat 90% bottom transparent