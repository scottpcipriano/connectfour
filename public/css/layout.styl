#page
	width 95%
	margin 0 auto

#content
	width 100%

.panel
	float left

#gamePanel
	width 65%
	margin-right 5%

$gameGridCreator($cellSize)
		
.gamesList
	width 50%
	padding-top 1em
	margin-bottom 1em
	ul
		list-style none
		margin 0
		padding 0
		background-color white
		border-radius(10px)
		// -webkit-background-clip padding-box
		// background-clip padding-box
		color #333
		opacity 0.9
	li
		padding .5em
		border-top 1px solid #83cde2
		transition(all, .5s, ease-in-out)
		a 
			color #4e95c7
			font-weight bold
		.actions
			float right
			a
				padding 0 .5em
	li:first-child
		border-top none
	li:hover
		background-color #83cde2
	li:first-child:hover
		border-radius(10px 10px 0 0)
	li:last-child:hover
		border-radius(0 0 10px 10px)

html
	background-color #4e95c7

body
	margin 0
	color white
	background-color #4e95c7
	font 15px/1.2em 'Source Sans Pro', sans-serif

a,
a:hover,
a:visited,
a:focus
	color white

h2
	color #332f60

#page
	width auto

header
	overflow hidden
	h1
		float left
		margin 15px 0 0 15px
		background url('../images/logo.png') no-repeat 0 0 transparent
		a
			display block
			width 500px
			height 91px
	nav
		float right
		margin 0 50px 0 0
		font-weight 600
	ul
		list-style none
		margin 0
		overflow hidden
	li
		float left
		margin 0 0 0 1px
		a
			display block
			line-height 30px
			padding 0 20px
			background-color #83cde2
			text-decoration none
			transition(all, .2s, ease)
		a:hover
			background-color #83cde2 * .9
			padding-top 5px

#content
	clear both
	overflow hidden
	padding 25px
	width auto
.game
	background-color #e0e0e0
	#page
		background-image url('../images/boy.png'), url('../images/girl.png'), url('../images/bubbles.png')
		background-repeat no-repeat, no-repeat, no-repeat
		background-position right -10px, 0 150px, 155px 300px
		background-color #4e95c7, transparent, transparent
	#content
		min-height 620px
		border-bottom 5px solid white

.gameStats
	float left
	margin 15px 0 0 50px
	h3
		margin 0
	p
		margin 0

.playerOne
	font-weight 600
	color #e1d100

.playerTwo
	font-weight 600
	color #4dff62

.olderMessage
	font-weight 600
	color #EBEBEB

#chatPanel
	float left
	// position absolute
	// right 290px
	// top 20px
	width 30%

#chatPanel * { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }

#chatInput
	font-size 15px
	margin 0 0 8px
	padding 4px
	border 5px solid white
	width 100%
	color white
	background-color #4e95c7 * .8
	box-shadow 3px 3px 8px (#83cde2 * .5)

#chatLog
	margin 0 0 20px
	padding 4px
	width 100%
	height 150px
	background-color #4e95c7 * .8
	border 5px solid white
	box-shadow 3px 3px 8px (#83cde2 * .5)
	overflow auto
	p
		margin 0 0 5px

#gamePanel
	float right
	margin 10px 250px 0 0
	width auto


.eggz
	height 100%
	body
		height 100%
		background url('../images/hipster.png') no-repeat 90% bottom transparent

a.button
	display inline-block
	line-height 30px
	padding 10px 20px
	//background-color #83cde2
	background-color #f7e305
	color #3e779f
	opacity 0.9
	text-decoration none
	font-weight bold
	transition(all, .2s, ease)
	border-radius(10px)
a.button:hover
	background-color #f7e305 * .9
	color #332f60
