<div class="panel" role="main" id="gamePanel">

	<span id="me" style="display:none;">{{user.email}}</span>
	<span id="gameId" style="display:none;">{{game._id}}</span>

	<div id="gameGrid">
		<div class="controls">
			{{gameControls user game}}
		</div>

		{{#each game.board}}

			<div class="column col-{{@index}}">
				
				{{#each this}}

					{{ drawDot @index this }}

				{{/each}}
				
				<div class="row"></div>
				<div class="row"></div>
				<div class="row"></div>
				<div class="row"></div>
				<div class="row"></div>
				<div class="row"></div>
		
			</div>

		{{/each}}

		<div class="board">
			<img src="../images/board.png" alt="" class="" />
		</div>
	</div>
</div>


<div class="panel" id="chatPanel">
	<label for="chatInput">Talk some smack:</label>
	<input id="chatInput" type="text">
	<div id="chatLog">
    {{#each chats}}
      <p><span class="olderMessage">{{user}}:</span> {{message}}</p> 
    {{/each}}
  </div>
</div>
